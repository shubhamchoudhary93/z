<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout style="@style/general_outer_linear_layout_vertical">

        <LinearLayout
            android:id="@+id/welcome_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView style="@style/head_text" />

            <TextView
                android:layout_marginTop="100dp"
                style="@style/head_question_text"
                android:text="Welcome!" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Touch to continue!" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/world_select_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                style="@style/head_question_text"
                android:text="Where do you want to go?" />

            <Button
                android:id="@+id/muggle_world_button"
                style="@style/general_button"
                android:layout_marginTop="20dp"
                android:text="Muggle World" />

            <Button
                android:id="@+id/wizard_world_button"
                style="@style/general_button"
                android:text="Wizard World" />
        </LinearLayout>
    </LinearLayout>

</layout>